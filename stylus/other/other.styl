.opacity1
  opacity 1
  z-index 1

.opacity0
  opacity 0
  z-index -1

.transition-all-fast
  transition all .25s ease-in-out

.transition-all-slow
  transition all 1s ease-in-out

.transition-all-medium
  transition all .5s ease-in-out

.cursor-pointer
  cursor pointer

.label-container
  min-height 20px

.drag-drop-area
  border dotted #666 2px
  margin 6px
  padding 60px 0px
  text-align center
  font-size 30px
  background-color #E0E0E0
  color #666

  &.file-hovering
    background-color #eeeeee
    color #2b2b2b
    .choose-file-button
      visibility hidden


.btn-file
  position relative
  overflow hidden

.btn-file input[type=file]
  position absolute
  top 0
  right 0
  min-width 100%
  min-height 100%
  font-size 999px
  text-align right
  opacity 0
  outline none
  background white
  cursor inherit
  display block