for size in (.7 xxsmall) (.8 xsmall) (.9 small) (1 medium) (1.1 large) (1.2 xlarge) (1.3 xxlarge)
  .font-size-{size[1]}
    font-size size[0]em

  .font-size-{size[1]}-2x
    font-size (size[0]*2)em

  .font-size-{size[1]}-3x
    font-size (size[0]*3)em

  .font-size-{size[1]}-4x
    font-size (size[0]*4)em

  .font-size-{size[1]}-5x
    font-size (size[0]*5)em


for alignment in center end inherit initial justify left right start
  .text-align-{alignment}
    text-align alignment