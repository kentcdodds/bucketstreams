.post
  width 100%
  margin-bottom 30px

  .post-meta
    height 80px
    position relative
    .post-author-photo
      position absolute
    .post-info
      display inline-block
      padding 6px
      vertical-align top
      width 100%
      padding-left 72px
      .post-options
        display inline
        float right
        .dropdown
          .dropdown-toggle
            cursor pointer
            text-decoration none
          ul
            float right
    .post-author-name
      font-size 1.2em

  .post-content
    font-size 1.1em
    textarea
      height 74px
      resize vertical
  .panel-footer
      height 40px
      border-bottom solid 1px #DDD
    .share-post
      float right
      border-bottom-left-radius initial
      border-bottom-right-radius initial
      a
        padding 12px
        cursor pointer
        &:hover
          text-decoration none
    & .mode-create
      padding 6px 15px 6px 6px
    .create-footer
      .create-post-icons
        margin-top 4px
      .post-button
        width 60px
        padding 3px

  .comments-container
    padding 10px
    border-top solid #DDD 1px
    .add-comment
      position relative
      .add-comment-photo
        display inline
        position absolute
        margin-top 1px
      .add-comment-field
        display inline-block
        width 100%
        input
          border-radius 32px 8px 8px 32px
          padding-left 36px
    .comment-container
      max-height 180px
      overflow-y scroll
      margin-top 10px
      .comment
        margin-top 14px
        &:first-child
          margin-top 0px