@import 'nib';

#top-content {
  min-height: 100%;
  height: auto;
  margin: -20px auto -20px;
  padding: 20px 0 20px 0;
}

#top-bar {
  width 100%;
  height 76px;
  border-bottom solid 4px bsBrown0
  background-color bsBlue0
}

.form-flow {
  width: 400px;
  margin-top: 40px;
  margin-bottom: 100px;
}

#logo-container {
  width: 800px;
}

#logo-container > img {
  width: 800px;
}

#footer-container {
  width: 100%;
  background-color: bsBrown0;
  height: 40px;
}

#footer-container > div {
  margin-top: 10px;
}

.third-party-button {
  color: white;
  font-size: 30px;
}

for provider in facebook twitter google-plus
  .button-{provider}
    @extend .background-color-{provider}
