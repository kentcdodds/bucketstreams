@import 'nib'

.genie-lamp-container
  opacity 0
  transition all .2s ease-in-out
  position fixed
  top 10%
  left 50%
  z-index -1
  border-radius 8px
  color #333
  background-color #F7F7F7
  box-shadow 0px 0px 26px 6px #888888
  width 600px
  margin-left -300px
  padding 16px
  &.visible
    opacity 1
    z-index 1050

  .lamp-input
    border-radius 8px
    margin 0
    width 100%
    line-height 60px
    padding 0px 12px 0px 12px
    font-size 40px
    height 60px

  .lamp-wishes-container
    max-height 300px
    font-size 30px
  div
    width 100%
    cursor pointer
    overflow-y auto
    margin-top 10px

    .wish-img-icon, .wish-i-icon
      vertical-align middle
      height 35px
      margin-right 10px


    .lamp-wish
      padding 0px 12px 0px 12px
      line-height 50px
      &.focused
        border-radius 8px
        background-color #DDD