@import 'nib';

#top-content {
  min-height: 100%;
  height: auto;
  margin: -20px auto -20px;
  padding: 20px 0 20px 0;
}

#top-bar {
  background-color: #2C4286;
  width: 100%;
  height: 76px;
  border-bottom: solid 4px #693A1B;
}

.form-flow {
  width: 400px;
  margin-top: 40px;
  margin-bottom: 100px;
}

#logo-container {
  width: 800px;
}

#logo-container > img {
  width: 800px;
}

#footer-container {
  width: 100%;
  background-color: #693A1B;
  height: 40px;
}

#footer-container > div {
  margin-top: 10px;
}

.third-party-button {
  color: white;
  font-size: 30px;
}

.button-facebook {
  background-color: #3B5998;
}

.button-facebook:hover {
  color: #3B5998;
}

.button-twitter {
  background-color: #4099FF;
}

.button-twitter:hover {
  color: #4099FF;
}

.button-google-plus {
  background-color: #D34836;
}

.button-google-plus:hover {
  color: #D34836;
}