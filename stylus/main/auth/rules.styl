.bucket-rules
  i.rule-connector
    color #555
    cursor pointer
  .provider-column
    &.inbound, &.outbound
      i.rule-connector
        margin-top 12px
    &.inbound
      padding-right 140px
      i.rule-connector
        float right
    &.outbound
      text-align right
      padding-left 140px
      i.rule-connector
        float left
    .provider-button-wrapper
      margin-bottom 40px
      font-size 2.4em
      color #2e8924
      i
        cursor pointer
      .provider-button
        font-size 30px
        color white
      &.not-connected
        color #AAA
        .provider-button
          opacity .7
          &:hover
            opacity 1
            background-color #FFF
            border-color #CCC
        for provider in facebook twitter google
          .button-{provider}:hover
            @extend .color-{provider}

      for provider in facebook twitter google
        .button-{provider}
          @extend .background-color-{provider}

  .buckets-container
    .bucket
      font-size 2em
      margin-bottom 12px
      .bucket-name
        padding 0 40px 0 40px
      i.rule-connector
        margin-top 8px
      i.rule-connector:first-child
        float left
      i.rule-connector:last-child
        float right

